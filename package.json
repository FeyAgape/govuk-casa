{
  "name": "@dwp/govuk-casa",
  "version": "3.0.2",
  "description": "Framework for creating basic GOVUK Collect-And-Submit-Applications",
  "main": "casa.js",
  "files": [
    "app/**/*",
    "definitions/**/*",
    "dist/**/*",
    "lib/**/*",
    "src/**/*",
    "casa.js",
    "!**/*/.DS_Store",
    "!**/*/.gitkeep"
  ],
  "engines": {
    "node": ">=8.9.0 <=11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dwp/govuk-casa.git"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "colors": "1.3.3",
    "csurf": "1.10.0",
    "debug": "4.1.1",
    "fs-extra": "8.0.1",
    "govuk-frontend": "2.13.0",
    "govuk_template_jinja": "0.25.0",
    "lodash.merge": "4.6.1",
    "moment": "2.24.0",
    "nunjucks": "3.2.0",
    "object-resolve-path": "1.1.1",
    "recursive-readdir-sync": "1.0.6",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "uid-safe": "2.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@commitlint/travis-cli": "8.0.0",
    "@dwp/commitlint-config-base": "1.1.0",
    "@dwp/eslint-config-base": "2.1.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-http": "4.3.0",
    "cheerio": "1.0.0-rc.3",
    "conventional-changelog-cli": "2.0.21",
    "eslint": "6.0.1",
    "eslint-plugin-sonarjs": "0.4.0",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "husky": "2.4.1",
    "jsdom": "15.1.1",
    "minimatch": "3.0.4",
    "mocha": "6.1.4",
    "node-mocks-http": "1.7.6",
    "npm-audit-resolver": "1.5.0",
    "nyc": "14.1.1",
    "proxyquire": "2.1.0",
    "sass": "1.22.1",
    "sinon": "7.3.2",
    "sinon-chai": "3.3.0",
    "uglify-js": "3.6.0",
    "uuid": "3.3.2",
    "yargs": "13.2.4"
  },
  "peerDependencies": {
    "express": "4.x",
    "express-session": "1.x"
  },
  "scripts": {
    "pipeline": "npm test && npm run compliance && npm run quality && npm run security:vulnerable-packages && (npm outdated || true)",
    "compliance": "npm run compliance:lint",
    "compliance:lint": "eslint .",
    "test": "npm run test:unit --silent && npm run test:integration --silent",
    "test:unit": "mocha -R spec \"./test/unit/**/*Tests.js\"",
    "test:integration": "mocha -R spec \"./test/integration/**/*Tests.js\"",
    "quality": "npm run quality:coverage",
    "quality:coverage": "nyc npm test",
    "security": "npm run security:vulnerable-packages",
    "security:vulnerable-packages": "check-audit --json | node -e 'a=JSON.parse(fs.readFileSync(\"/dev/stdin\",\"utf-8\")).metadata.vulnerabilities;process.exit(a.high+a.critical);'",
    "package:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "start-pen-test-service": "PORT=4000 node ./test/penetration/server.js",
    "compile-static-assets": "node ./scripts/compile-sass.js && node ./scripts/compile-js.js",
    "prepare": "npm run compile-static-assets --silent"
  },
  "author": "DWP <open-source@engineering.digital.dwp.gov.uk>",
  "license": "ISC"
}
