{% from "components/button/macro.njk" import govukButton %}

<form action="#" method="post" autocomplete="off" novalidate class="casa-form">
  <input type="hidden" name="_csrf" value="{{ params.csrfToken }}" />
  {% if params.inEditMode %}<input type="hidden" name="edit" value="true" />{% endif %}

  {# FORM CONTENT HERE #}
  {{ caller() }}

  {% if params.buttonBarHidden != true %}
    <footer class="casa-form-control-block govuk-body">
      {{ govukButton({
        attributes: {
          id: 'continue-button'
        },
        text: t('common:form.buttons.saveChanges.label') if params.inEditMode else t('common:form.buttons.continue.label')
      }) }}

      {% if params.inEditMode %}
        <a href="{{ params.casaMountUrl }}review" class="casa-cancel-review-link govuk-link--no-visited-state">{{ t('common:form.buttons.cancel.label') }}</a>
      {% endif %}
    </footer>
  {% endif %}
</form>
